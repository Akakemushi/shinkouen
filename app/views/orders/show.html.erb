<div class="container">
  <div>
    <div><%= cl_image_tag(@order.teapot.images.first.key, width: 300, height: 300, crop: :fill) %></div>
    <div>
      <h1>Order #<%= @order.id %> <small><span><%= @order.state %></span></small></h1>
      <ul>
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TEAPOT</strong> <%= @order.teapot.maker %> [<%= @order.teapot_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
