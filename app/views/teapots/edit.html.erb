<section>
  <div class="container">
    <h1 class="section-title">Edit Details</h1>
    <%= simple_form_for @teapot, html: { multipart: true } do |f| %>
      <div class="form-inputs">
        <%= f.input :height, input_html: { min: 0, step: 1, type: 'number' } %>
        <%= f.input :width, input_html: { min: 0, step: 1, type: 'number' } %>
        <%= f.input :depth, input_html: { min: 0, step: 1, type: 'number' } %>
        <%= f.input :weight, input_html: { min: 0, step: 1, type: 'number' } %>
        <%= f.input :ccs, input_html: { min: 0, step: 1, type: 'number' } %>
        <%= f.input :comment, as: :text %>
        <%= f.input :price_cents, required: true, input_html: { min: 0, step: 1, type: 'number' } %>
        <%= f.input :kilntype, required: true %>
        <%= f.input :shape, required: true %>
        <%= f.input :maker, required: true %>
        <%= f.input :sku, required: true %>
      </div>

      <h3>Current Images</h3>
      <div class="current-images">
        <% @teapot.images.each_with_index do |image, index| %>
          <div class="image-thumbnail">
            <%= cl_image_tag(image.key, alt: "Teapot Image", class: "thumbnail", width: 150, height: 150, crop: :fill) %>
            <div class="remove-checkbox">
              <%= check_box_tag "teapot[remove_images][]", image.signed_id %>
              <label>Check to remove image</label>
            </div>
          </div>
        <% end %>
      </div>

      <h3>Add New Images</h3>
      <%= f.input :images, as: :file, input_html: { multiple: true } %>

      <div class="form-actions">
        <%= f.button :submit, "Save Changes" %>
      </div>
    <% end %>
  </div>
</section>
